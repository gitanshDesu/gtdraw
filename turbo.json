{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["DATABASE_URL","ACCESS_TOKEN_SECRET","REFRESH_TOKEN_SECRET","ACCESS_TOKEN_EXPIRY","REFRESH_TOKEN_EXPIRY"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
    "cache": false
  },
  "db:migrate": {
    "cache": false,
    "persistent": true
  },
  "db:deploy": {
    "cache": false
  }
  }
}
